<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="perfect_apps.sharkny">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MyAccountActivity"
            android:label="@string/title_activity_my_account"
            android:parentActivityName=".activities.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="perfect_apps.sharkny.activities.HomeActivity" />
        </activity>
        <activity
            android:name=".activities.AccountProfileActivity"
            android:label="@string/title_activity_account_profile"
            android:parentActivityName=".activities.MyAccountActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="perfect_apps.sharkny.activities.MyAccountActivity" />
        </activity>
        <activity
            android:name=".activities.AccountFinanceActivity"
            android:label="@string/title_activity_account_finance"
            android:parentActivityName=".activities.MyAccountActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="perfect_apps.sharkny.activities.MyAccountActivity" />
        </activity>
        <activity
            android:name=".activities.AccountAdvanageActivity"
            android:label="@string/title_activity_account_advanage"
            android:parentActivityName=".activities.MyAccountActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="perfect_apps.sharkny.activities.MyAccountActivity" />
        </activity>
        <activity
            android:name=".activities.AccountProjectActivity"
            android:label="@string/title_activity_account_project"
            android:parentActivityName=".activities.MyAccountActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="perfect_apps.sharkny.activities.MyAccountActivity" />
        </activity>
        <activity
            android:name=".activities.AccountServicesActivity"
            android:label="@string/title_activity_account_services"
            android:parentActivityName=".activities.MyAccountActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="perfect_apps.sharkny.activities.MyAccountActivity" />
        </activity>
    </application>

</manifest>